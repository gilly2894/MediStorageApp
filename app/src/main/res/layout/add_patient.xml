<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Patient"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:id="@+id/title_add_patient"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Name"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:id="@+id/input_name"
        android:layout_below="@id/title_add_patient"
        android:layout_centerHorizontal="true"
        android:width="320dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="PPSN"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_name"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_ppsn"
        android:width="320dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Condition"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_ppsn"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_condition"
        android:width="320dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Line 1"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_condition"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_address_line1"
        android:width="320dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Line 2"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_address_line1"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_address_line2"
        android:width="320dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="City"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_address_line2"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_city"
        android:width="320dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="County"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_city"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_county"
        android:width="320dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Country"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_county"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_country"
        android:width="320dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Postcode"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:layout_below="@id/input_country"
        android:layout_alignLeft="@id/input_name"
        android:layout_alignStart="@id/input_name"
        android:id="@+id/input_postcode"
        android:width="320dp" />

    <Button
        android:text="Add Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_postcode"
        android:layout_centerHorizontal="true"
        android:id="@+id/add_patient_button"
        android:onClick="createPatientBtnClick" />

    <ProgressBar
        android:id="@+id/pb_add_patient_indicator"
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_below="@id/add_patient_button"
        android:visibility="invisible" />

</RelativeLayout>
